<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MenuActivity"
        android:orientation="vertical"
        android:background="@drawable/lumpangalu">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aplikasi Pengenalan Obat"
            android:layout_gravity="center"
            android:textSize="40sp"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#0277BD"/>


        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Pedoman Umum"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:id="@+id/btnPedoman"
            android:background="#B39DDB"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Dasar-Dasar Obat"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:id="@+id/btnDasarObat"
            android:background="#B39DDB"/>


        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Daftar Obat"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:id="@+id/btnDaftarObat"
            android:background="#B39DDB"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Exit"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:id="@+id/btnExit"
            android:background="#B39DDB"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\nby : \nElizabeth Manogi"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:textColor="#0277BD"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All Rights Reserved"
            android:textSize="10sp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="#0277BD"/>

    </LinearLayout>

</ScrollView>
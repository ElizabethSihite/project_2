<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aplikasi Pengenalan Obat"
                android:textColor="@color/putih"
                android:textSize="20sp"/>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:background="@drawable/lumpangalu"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.example.ibeth.project_2.DasarObatActivity"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dasar Obat"
                android:layout_gravity="center"
                android:textSize="40sp"
                android:textAlignment="center"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="#0277BD"/>

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Penyimpanan Obat"
                android:layout_gravity="center"
                android:layout_marginTop="70dp"
                android:id="@+id/btnSimpanObat"
                android:background="#B39DDB"/>

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Pemberian Obat"
                android:layout_gravity="center"
                android:layout_marginTop="70dp"
                android:id="@+id/btnDosisObat"
                android:background="#B39DDB"/>

    </LinearLayout>

</LinearLayout>